// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sensor {
  id          Int        @id @default(autoincrement())
  type        SensorType
  designation String
  rawNumber   Int?
  rawBool     Boolean?
}

model Actuator {
  id          Int          @id @default(autoincrement())
  type        ActuatorType
  designation String
  state       Boolean
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String
  username String
}

enum ActuatorType {
  BLINDS
  LIGHT
}

enum SensorType {
  TEMPERATURE
  HUMIDITY
  BARO
  PROXIMITY
}
